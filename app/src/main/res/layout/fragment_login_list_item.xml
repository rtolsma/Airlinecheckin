<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	>

	<android.support.v7.widget.CardView
		android:id="@+id/fragment_login_list_item_cardview"
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		card_view:cardUseCompatPadding="true"
	>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			>

			<TableRow
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:weightSum="10"
				>

				<TextView
					android:id="@+id/fragment_login_list_item_title"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="@dimen/login_item_margin"
					android:layout_weight="10"
					android:textColor="@color/cardview_title_background"
					android:textSize="@dimen/login_item_title_font_size"
					/>
			</TableRow>

			<TableRow
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="left"
				android:weightSum="10"
				>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="@dimen/login_item_margin"
					android:text="@string/dialog_name_title"
					android:textSize="@dimen/login_item_font_size"
					android:textStyle="bold"

					/>

				<TextView
					android:id="@+id/fragment_login_list_item_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="@dimen/login_item_margin"
					android:textColor="@color/login_list_item_text"
					android:textSize="@dimen/login_item_font_size"
					/>

			</TableRow>


			<TableRow
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="left"
				android:weightSum="10"
				>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="@dimen/login_item_margin"
					android:text="@string/dialog_date_title"
					android:textSize="@dimen/login_item_font_size"

					android:textStyle="bold"
					/>

				<TextView
					android:id="@+id/fragment_login_list_item_date"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="@dimen/login_item_margin"
					android:textColor="@color/login_list_item_text"
					android:textSize="@dimen/login_item_font_size"
					/>

			</TableRow>

			<TableRow
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="left"
				android:weightSum="10"
				>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="@dimen/login_item_margin"
					android:text="@string/dialog_confirmation_code_title"
					android:textSize="@dimen/login_item_font_size"
					android:textStyle="bold"

					/>

				<TextView
					android:id="@+id/fragment_login_list_item_confirmation"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="@dimen/login_item_margin"
					android:textColor="@color/login_list_item_text"
					android:textSize="@dimen/login_item_font_size"

					/>

			</TableRow>


		</LinearLayout>
	</android.support.v7.widget.CardView>
</FrameLayout>
