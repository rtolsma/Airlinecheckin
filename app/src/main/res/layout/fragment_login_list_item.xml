<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="@dimen/login_item_padding"
	>

	<android.support.v7.widget.CardView
		android:id="@+id/fragment_login_list_item_cardview"
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		card_view:cardUseCompatPadding="true"
	>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			>
    <TextView
		android:id="@+id/fragment_login_list_item_title"
		android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/login_item_margin"
		android:background="@color/cardview_title_background"
		android:textColor="@android:color/white"
		android:textSize="@dimen/login_item_title_font_size"
		/>
    <TextView
		android:id="@+id/fragment_login_list_item_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/fragment_login_list_item_title"
		android:layout_margin="@dimen/login_item_margin"
		android:textColor="@color/login_list_item_text"
		android:textSize="@dimen/login_item_font_size"
		/>
	<TextView
		android:id="@+id/fragment_login_list_item_date"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/fragment_login_list_item_name"
		android:layout_margin="@dimen/login_item_margin"
		android:textColor="@color/login_list_item_text"
		android:textSize="@dimen/login_item_font_size"
		/>
	<TextView
		android:id="@+id/fragment_login_list_item_confirmation"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/fragment_login_list_item_date"
		android:layout_margin="@dimen/login_item_margin"
		android:textColor="@color/login_list_item_text"
		android:textSize="@dimen/login_item_font_size"

		/>

		</RelativeLayout>
	</android.support.v7.widget.CardView>
</FrameLayout>
